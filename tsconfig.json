{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"strictNullChecks": true,
		"baseUrl": "./"
	},
	"include": [
		"globals.d.ts",
		"lib/**/*",
		"scripts/**/*",
		"pages/**/*"
	],
	"exclude": [
		"typings/browser",
		"typings/browser.d.ts"
	],
	"compileOnSave": true,
	"buildOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	}
}

avatarSize = 50px

.user
	float left
	transform scale(1.0)
	width avatarSize
	height avatarSize
	border-radius 100%
	margin 0.2em
	&:hover
		.user-image
			box-shadow 0 0 8px rgb(0, 0, 0)

.user-image
	opacity 0
	transition all 250ms ease
	border-radius 100%
	margin 0 !important
	width avatarSize
	height avatarSize
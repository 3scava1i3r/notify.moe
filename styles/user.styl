avatarSize = 50px

.user-list
	width 100%
	display flex
	flex-flow row wrap

.user
	display block
	transform scale(1.0)
	width avatarSize
	height avatarSize
	border-radius 100%
	margin 0.2em
	&:hover
		.user-image
			box-shadow outlineShadowHeavy

.user-image
	opacity 0
	transition all 250ms ease
	border-radius 100%
	margin 0 !important
	width avatarSize
	height avatarSize
	object-fit cover

svg.user-image
	circle.body, circle.head
		fill textColor
	text
		fill white
		font-size 0.65rem
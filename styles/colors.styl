html, body
	color rgb(32, 32, 32)
	background-color rgb(254, 254, 254)

a
	color rgb(8, 193, 70)
	&:hover
		color rgb(12, 213, 110)

#header
	background rgba(0, 0, 0, 0.03)
	background-image url(/images/backgrounds/kano-196.png)
	background-repeat no-repeat
	background-size auto 100%
	background-position 100% 0%

#content
	background-color transparent

#footer
	background rgba(0, 0, 0, 0.06)
	a
		color rgb(6, 140, 35)
		&:hover
			color rgb(12, 200, 65)

.navigation-button
	color rgba(0, 0, 0, 0.5)
	&:hover
		color rgb(0, 0, 0)

input[type="text"],
input[type="email"],
input[type="password"]
	color rgb(32, 32, 32)
	background-color rgb(255, 255, 255)
	box-shadow none
	border 1px solid rgba(0, 0, 0, 0.1)

input[type="text"]:focus,
input[type="email"]:focus,
input[type="password"]:focus
	color rgb(0, 0, 0)
	box-shadow 0 0 6px rgba(16, 223, 120, 0.2)
	border 1px solid rgba(16, 223, 120, 0.95)

select
	color rgb(48, 48, 48)
	&:disabled
		background-color rgb(235, 235, 228)

.user-name
	a
		color rgb(16, 16, 16)

.list-provider-name-highlight
	color rgb(48, 48, 48)
doctype html
html
	head
		title= siteName
		style!= css
		link(rel='chrome-webstore-item', href='https://chrome.google.com/webstore/detail/hajchfikckiofgilinkpifobdbiajfch')

	body
		#container
			#header-container
				#header
					if !user
						#title
							a(href='/')
								h1= siteName
						#tagline Don't miss the next episode. Get notified instantly.
					
					nav#navigation
						each link in nav
							a(href='/#{link.url}', class='navigation-link' + (link.ajax === false ? '' : ' ajax'))
								.navigation-button
									if link.icon
										span(class='glyphicon glyphicon-' + link.icon)
									span= link.title
		
			#content-container
				#content.fade!= content
			
			#footer-container
				footer#footer
					#copyright &copy; 2015 Eduard Urbach
		
			#loading-animation
			
		script!= js
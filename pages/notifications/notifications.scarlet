.notifications-container
	horizontal
	justify-content center

.notifications
	vertical
	width 100%
	max-width 800px

.notification
	horizontal
	ui-element
	padding 1rem
	margin-bottom 0.5rem

.notification-icon
	margin-right 1rem

	img
		width 64px
		height 64px
		object-fit cover

.notification-info
	vertical
	flex 1

.notification-footer
	horizontal

.notification-text
	flex 1
	margin 0

.notification-date
	opacity 0.5
	font-size 0.9em
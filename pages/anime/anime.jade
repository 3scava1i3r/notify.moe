if anime
	section.anime-container
	
		header
			h2.anime-db-title(title=anime.type)= anime.title.romaji
		
			if anime.title.japanese !== anime.title.romaji
				h3.anime-japanese-title= anime.title.japanese
		
		if anime.image
			img.anime-db-image-left(src=anime.image, alt=anime.name)
			img.anime-db-image(src=anime.image, alt=anime.name)
			img.anime-db-image-right(src=anime.image, alt=anime.name)
		
		h3.anime-header Links
		ul.anime-websites
			li
				a(href='https://anilist.co/anime/' + anime.id, target='_blank', rel='nofollow') anilist.co
				
			if providers.HummingBird
				li
					a(href='https://hummingbird.me/anime/' + providers.HummingBird, target='_blank', rel='nofollow') hummingbird.me
					
			if providers.MyAnimeList
				li
					a(href='http://myanimelist.net/anime/' + providers.MyAnimeList, target='_blank', rel='nofollow') myanimelist.net
					
			if providers.AnimePlanet
				li
					a(href='http://www.anime-planet.com/anime/' + providers.AnimePlanet, target='_blank', rel='nofollow') anime-planet.com
		
		//-
			h3.anime-header Summary
			if anime.summary
				p.anime-summary!= anime.summary
			else
				p.anime-summary -
			
			h3.anime-header Links
			if anime.websites
				ul.anime-websites
					each website in anime.websites
						if website.title && website.url
							li
								a(href=website.url, target='_blank', rel='nofollow')= website.title
			else
				p.anime-websites -
		
			h3.anime-header Synonyms
			if anime.title.synonyms
				ul.anime-synonyms
					li.anime-japanese-title= anime.title.japanese
					each synonym in anime.title.synonyms
						li= synonym
			else
				ul.anime-synonyms
					li
					
					h3.anime-header Links
					if anime.websites
						ul.anime-websites
							each website in anime.websites
								if website.title && website.url
									li
										a(href=website.url, target='_blank', rel='nofollow')= website.title
	//p.powered-by Data by 
	//	a(href='http://anilist.co/', target='_blank', rel='nofollow') anilist.co
else
	section
		header
			h2 Anime
		
		input#search(type='text', placeholder='Search...', onkeyup='window.searchAnime();', onfocus='this.select();')
		
		#search-results
	
	script#all-anime(type='application/json')!= animeToIdJSONString
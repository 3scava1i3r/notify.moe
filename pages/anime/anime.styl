.anime-container
	float left
	max-width 728px
	padding 0 1em
	text-align center
	border-radius 3px

.anime-db-title
	text-align center

.anime-japanese-title
	margin-bottom 1em
	font-size 0.9em
	opacity 0.5

.anime-db-image
.anime-db-image-left
.anime-db-image-right
	width 100%
	max-width 225px !important
	border-radius 3px

angle = 20deg
scale = 0.5

.anime-db-image
	box-shadow 0 0 8px rgba(0, 0, 0, 0.7)
	filter saturate(100%)
	transition all 290ms ease
	&:hover
		filter saturate(130%)
		box-shadow 0 0 12px rgba(0, 0, 0, 0.8)

.anime-db-image-left
.anime-db-image-right
	filter grayscale(1)

.anime-db-image-left
	transform translateX(-10px) scale(scale) rotateZ(angle * -1)

.anime-db-image-right
	transform translateX(10px) scale(scale) rotateZ(angle)

.search-performance
.anime-count
	float left
	opacity 0.25

.search-result
	float left
	width 100%
	padding 0.25em 0.5em
	border-radius 3px
	box-sizing border-box
	&:focus
		background-color rgb(32, 32, 32) !important
		color rgb(232, 232, 232) !important

#search-results
	float left
	width 100%
	text-align left

@media only screen and (max-width: 800px)
	.anime-db-image-left
	.anime-db-image-right
		display none
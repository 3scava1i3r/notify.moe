@media only screen and (max-width: 800px)
	.anime-title-db
	.anime-second-title-container
		text-align center

	.anime-summary
		margin-left 0
		margin-top 1em

	.anime-page-image-container
		width 100%
		text-align center

	.anime-summary-header
		display block
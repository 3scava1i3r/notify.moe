section
	header
		h2 Editor Panel - Matches
	
	include ../header.jade
	
	if malMatches
		h3 MyAnimeList - Worst Matches
		table.match-list
			thead
				tr
					th Provider
					th ARN
					th Similarity
			tbody
				each match in malMatches
					tr(data-id=match.providerId)
						td.match-provider-title
							a(href='http://myanimelist.net/anime/' + match.providerId, target='_blank')= match.providerTitle
						td.match-title
							a.ajax(href='/anime/' + match.id)= match.title
						td.match-similarity= Math.round(match.similarity * 100) + ' %'
	

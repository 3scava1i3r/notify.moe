section
	header
		h2 Users
	
	include header.jade
	
	if categories
		each category, categoryTitle in categories
			h3.user-category(title=category.length + (category.length === 1 ? ' user' : ' users'))= categoryTitle
			.user-list
				each user in category
					a.user.ajax(href='/+' + user.nick, title=user.nick)
						img.user-image(src=user.avatar ? (user.avatar + '?s=50&r=x&d=mm') : '/images/elements/no-gravatar.svg', alt=user.nick)
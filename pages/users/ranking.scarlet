.ranking-list
	width auto

.ranking
	width 100%

	td
		vertical-align middle

.ranking-user
	horizontal
	align-items center

	.user-image
		width calc(avatar-size / 2)
		height calc(avatar-size / 2)

	.user-pro-icon
		font-size calc(user-pro-icon-size / 2)

.ranking-user-nick
	margin-left 0.8rem

.ranking-score,
.ranking-accuracy
	text-align right
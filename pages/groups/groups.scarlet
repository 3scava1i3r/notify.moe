.groups
	horizontal-wrap
	justify-content space-around

.group
	vertical
	ui-element
	position relative
	width 100%
	max-width 500px
	padding 0.5rem 1rem
	margin calc(content-padding / 2)

.group-name
	horizontal
	align-items center

.group-tagline
	opacity 0.6

.group-member-count
	position absolute
	top 0.5rem
	right 1rem
	text-align right
	font-size 0.8rem
	opacity 0.5
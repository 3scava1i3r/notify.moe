.grid
	display flex
	flex-flow row wrap
	float none !important
	justify-content center

.grid-cell
	margin 0.5em
	flex-grow 0
	flex-shrink 0

.grid-cell-content
	width 16vw
	height 9vw
	min-width 90px
	min-height 127px
	max-width 200px
	max-height 282px

.grid-cell-image
	object-fit cover

.grid-cell-text
	display flex
	flex-flow column
	align-items center
	justify-content center
	padding 0.75em
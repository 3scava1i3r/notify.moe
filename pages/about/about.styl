section
	float left
	display block
	clear both
	transform-style preserve-3d
	width 100%
	text-align center
	header
		width 100%
		clear both
	h2
		text-align center
		font-size 2em

.button-list
	display inline-block
	margin 0
	li
		float left
		display block

.button-link
	display inline-block
	padding 1em
	margin 0.5em
	border-radius 5px
	width 256px
	height 256px
	text-align center
	transform scale(0.7)
	&:hover
		width 256px
		height 256px
		text-decoration none
		transform scale(0.9)

.button-content
	span[itemprop="name"]
		display none
	h3
		font-size 1em
		font-weight normal
		margin-bottom 1em !important
		text-align center

.no-scale
	transform scale(1.0)

	&:hover
		transform scale(1.0)
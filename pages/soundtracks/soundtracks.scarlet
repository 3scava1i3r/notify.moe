.sound-tracks
	horizontal-wrap
	justify-content space-around

.sound-track
	vertical
	flex 1
	flex-basis 500px
	padding 1rem

.sound-track-content
	horizontal
	border-radius 3px
	overflow hidden
	box-shadow shadow-light

	iframe
		width 100%

.soundtrack-image
	object-fit cover
	width 100%
	height 200px

.sound-track-footer
	text-align center
	margin-bottom 1rem
	margin-top 0.4rem
	font-size 0.9em

	span
		opacity 0.65

.sound-track-anime-link
	display none

> 800px
	.sound-track-anime-link
		display block

.sound-track-anime-image
	width 142px
	height 200px
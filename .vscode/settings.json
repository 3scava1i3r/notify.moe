{
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"files.trimTrailingWhitespace": true,
	"files.exclude": {
		"**/*.js": {
			"when": "$(basename).ts"
		},
		"components/": true
	},
	"files.associations": {
		"*.pixy": "jade",
		"*.scarlet": "stylus"
	},
	"search.exclude": {
		"components/": true,
		"audio/": true,
		"video/": true,
		"**/*.svg": true,
		"**/*.html": true,
		"**/*.opus": true,
		"**/*.ogg": true,
		"**/*.m4a": true,
		"**/*.webm": true,
	},
	"[jade]": {
		"files.trimTrailingWhitespace": false
	}
}

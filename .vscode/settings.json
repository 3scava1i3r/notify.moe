{
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"files.trimTrailingWhitespace": true,
	"tsimporter.emitSemicolon": false,
	"tsimporter.doubleQuotes": true,
	"files.exclude": {
		"**/*.js": {
			"when": "$(basename).ts"
		},
		"components/": true
	},
	"files.associations": {
		"*.pixy": "jade",
		"*.scarlet": "stylus"
	},
	"search.exclude": {
		"components/": true,
		"**/*.svg": true,
		"**/*.html": true
	},
	"[jade]": {
		"files.trimTrailingWhitespace": false
	}
}
